<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_cloud_phone_connector_form" model="ir.ui.view">
            <field name="name">cloud.phone.connector.view.form</field>
            <field name="model">cloud.phone.connector</field>
            <field name="arch" type="xml">
                <form string="Connector">
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="cloud_phone_vendor"/>
                        <field name="url"/>

                        <field name="login" attrs="{'invisible':[('cloud_phone_vendor', '!=', 'mts')]}"/>
                        <field name="password" attrs="{'invisible':[('cloud_phone_vendor', '!=', 'mts')]}" password="True"/>

                        <field name="vpbx_api_key" attrs="{'invisible':[('cloud_phone_vendor', '!=', 'mango')]}"/>
                        <field name="vpbx_api_salt" attrs="{'invisible':[('cloud_phone_vendor', '!=', 'mango')]}"/>
                        <field name="balance" attrs="{'invisible':[('cloud_phone_vendor', '!=', 'mango')]}"/>

                        <field name="company_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_cloud_phone_connector_tree" model="ir.ui.view">
            <field name="name">cloud.phone.connector.view.tree</field>
            <field name="model">cloud.phone.connector</field>
            <field name="arch" type="xml">
                <tree decoration-muted="active == False" string="Connectors">
                    <field name="name"/>
                    <field name="url" placeholder="https://mrecord.mts.ru/api/v3"/>
                    <field name="cloud_phone_vendor"/>
                    <field name="company_id" placeholder="Empty for all companies"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="action_cloud_phone_connector" model="ir.actions.act_window">
            <field name="name">Connectors</field>
            <field name="res_model">cloud.phone.connector</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>