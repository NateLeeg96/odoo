<odoo>
    <record id="category_cp_security" model="ir.module.category">
        <field name="name">Cloud phone base</field>
    </record>


    <record id="group_cp_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="category_cp_security" />
        <field name="users" eval="[(4, ref('base.group_user'))]" />
    </record>

    <record id="group_cp_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="implied_ids" eval="[(4, ref('group_cp_user'))]" />
        <field name="category_id" ref="category_cp_security" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
    </record>

    <record id="rule_cloud_phone_base_manager" model="ir.rule">
        <field name="name">Manager: only read all calls</field>
        <field name="model_id" ref="model_cloud_phone_call"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
        <field name="groups" eval="[(4,ref('cloud_phone_base.group_cp_manager'))]"/>
    </record>

